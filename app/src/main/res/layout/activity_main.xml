<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/extraLargeMargin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extraSmallMargin"
            android:text="@string/todaysDate"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_of_text"
            android:elevation="@dimen/LargeMargin"
            android:padding="@dimen/extraLargeMargin"
            android:text="dd - mm - yyyy"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extraSmallMargin"
            android:layout_marginTop="@dimen/extraLargeMargin"
            android:text="@string/dateOfBirth"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_of_text"
            android:elevation="@dimen/LargeMargin"
            android:padding="@dimen/extraLargeMargin"
            android:text="dd - mm - yyyy"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extraLargeMargin"
            android:layout_marginBottom="@dimen/padding"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculate" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extraSmallMargin"
            android:layout_marginTop="@dimen/extraLargeMargin"
            android:text="@string/age"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_of_text"
            android:elevation="@dimen/smallMargin"
            android:showDividers="middle"
            android:divider="@color/colorPrimary"
            android:dividerPadding="@dimen/smallMargin"
            android:orientation="horizontal"
            android:padding="@dimen/LargeMargin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Year"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mediumMargin"
                    android:gravity="center"
                    android:text="@string/zeroZero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Months"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mediumMargin"
                    android:gravity="center"
                    android:text="@string/zeroZero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Days"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mediumMargin"
                    android:gravity="center"
                    android:text="@string/zeroZero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extraSmallMargin"
            android:layout_marginTop="@dimen/extraLargeMargin"
            android:text="@string/nextBirthDay"
            android:textColor="@color/white"
            android:textSize="@dimen/normalTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_of_text"
            android:elevation="@dimen/smallMargin"
            android:layout_marginBottom="@dimen/extraLargeMargin"
            android:showDividers="middle"
            android:divider="@color/colorPrimary"
            android:dividerPadding="@dimen/smallMargin"
            android:orientation="horizontal"
            android:padding="@dimen/LargeMargin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Months"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mediumMargin"
                    android:gravity="center"
                    android:text="@string/zeroZero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Days"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mediumMargin"
                    android:gravity="center"
                    android:text="@string/zeroZero"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>